{
    "name": "pixi-pwa-template",
    "version": "0.0.1",
    "description": "pixi.js typescript webpack progressive web app template",
    "keywords": [
        "pixi",
        "webpack",
        "pwa",
        "template"
    ],
    "scripts": {
        "webpack": "webpack",
        "webpack-dev-server": "webpack-dev-server",
        "gulp-dist": "npx del-cli dist --force  && gulp --production --dir dist",
        "gulp-dev": "npx del-cli dev --force  && gulp --development --dir dev --debug",
        "build": "npm run gulp-dist  && npm run webpack -- --env mode=production",
        "start": "npm run gulp-dev  && npm run webpack-dev-server -- --env mode=development",
        "prettier": "npx prettier",
        "prettier:format": "npm run prettier --format --write src/app/*.ts",
        "prettier:check": "npm run prettier --check -c ./src/app/*.ts",
        "lint-check": "npx eslint ./src/app/*.ts",
        "check": "npm run lint-check && npm run prettier:check",
        "prepare": "husky install"
    },
    "author": {
        "name": "Noncho Savov",
        "email": "contact@foumartgames.com",
        "url": "https://www.foumartgames.com/"
    },
    "license": "MIT",
    "dependencies": {
        "core-js": "^3.15.2",
        "pixi.js": "^6.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.13.16",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-proposal-decorators": "^7.13.15",
        "@babel/plugin-transform-modules-commonjs": "^7.13.8",
        "@babel/plugin-transform-runtime": "^7.13.15",
        "@babel/preset-env": "^7.13.15",
        "@babel/preset-typescript": "^7.13.0",
        "@babel/runtime": "^7.14.6",
        "@types/html-webpack-plugin": "^3.2.5",
        "@types/mini-css-extract-plugin": "^1.4.2",
        "@types/node": "^16.0.0",
        "@types/optimize-css-assets-webpack-plugin": "^5.0.3",
        "@types/terser-webpack-plugin": "^5.0.3",
        "@types/webpack": "^5.28.0",
        "@types/webpack-merge": "^4.1.5",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "babel-loader": "^8.2.2",
        "babel-register": "^6.26.0",
        "css-loader": "^5.2.4",
        "del-cli": "^3.0.1",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-prettier": "^3.4.0",
        "google-closure-compiler": "^20210601.0.0",
        "gulp": "^4.0.2",
        "gulp-clean-css": "^4.3.0",
        "gulp-concat": "^2.6.1",
        "gulp-html-replace": "^1.6.2",
        "gulp-htmlmin": "^5.0.1",
        "gulp-if": "^3.0.0",
        "gulp-minify": "^3.1.0",
        "gulp-string-replace": "^1.1.2",
        "html-webpack-plugin": "^5.3.1",
        "husky": "^6.0.0",
        "jsdom": "^16.5.3",
        "mini-css-extract-plugin": "^2.0.0",
        "optimize-css-assets-webpack-plugin": "^5.0.4",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "remove-files-webpack-plugin": "^1.4.5",
        "terser-webpack-plugin": "^5.1.1",
        "ts-loader": "^9.2.3",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4",
        "webpack": "^5.37.0",
        "webpack-cli": "^4.6.0",
        "webpack-dev-server": "^4.0.0-beta.0",
        "webpack-merge": "^5.7.3",
        "yargs": "^17.0.1"
    },
    "main": "babel.config.js"
}
